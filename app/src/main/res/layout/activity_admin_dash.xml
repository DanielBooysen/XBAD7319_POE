<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".AdminDash">

    <!-- Active Tasks Button -->
    <Button
        android:id="@+id/active_tasks_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Active Tasks"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Completed Tasks Button -->
    <Button
        android:id="@+id/completed_tasks_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Completed Tasks"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Your Tasks Button -->
    <Button
        android:id="@+id/your_tasks_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Your Tasks"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Hours Worked Button -->
    <Button
        android:id="@+id/hours_worked_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Hours Worked"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Add Employee Button -->
    <Button
        android:id="@+id/add_employee_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Add Employee"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Log a Task Button -->
    <Button
        android:id="@+id/log_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Log a Task"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Logout button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginTop="24dp"/>
</LinearLayout>